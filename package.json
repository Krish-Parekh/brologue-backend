{
	"name": "brologue-backend",
	"module": "index.ts",
	"type": "module",
	"main": "src/index.ts",
	"scripts": {
		"start": "nodemon src/index.ts",
		"dev": "nodemon --exec tsx src/index.ts",
		"build": "tsup src/index.ts --format esm --dts --clean",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:pull": "drizzle-kit pull",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"lint": "biome check .",
		"lint:fix": "biome check . --write --unsafe",
		"format": "biome format .",
		"format:fix": "biome format . --write --unsafe",
		"pm2:start": "pm2 start ecosystem.config.cjs",
		"pm2:start:dev": "pm2 start ecosystem.config.cjs --env development",
		"pm2:prod": "pm2 start ecosystem.config.cjs --env production",
		"pm2:stop": "pm2 stop brologue-backend",
		"pm2:restart": "pm2 restart brologue-backend",
		"pm2:logs": "pm2 logs brologue-backend"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.6",
		"@types/bun": "latest",
		"@types/compression": "^1.8.1",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.5",
		"@types/winston": "^2.4.4",
		"drizzle-kit": "^0.31.7",
		"nodemon": "^3.1.11",
		"pm2": "^6.0.8",
		"tsup": "^8.5.0",
		"tsx": "^4.20.6"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@clerk/backend": "^2.23.0",
		"@clerk/express": "^1.7.50",
		"body-parser": "^2.2.0",
		"compression": "^1.8.1",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.7",
		"express": "^5.1.0",
		"groq-sdk": "^0.37.0",
		"http-status-codes": "^2.3.0",
		"postgres": "^3.4.7",
		"winston": "^3.18.3",
		"zod": "^4.1.12"
	}
}
